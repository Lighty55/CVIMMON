# default: on
# description: mysqlchk
service mysqlchk
{
        disable = no
        flags = REUSE
        socket_type = stream
        port = 9200
        wait = no
        user = nobody
        server = /usr/bin/clustercheck
        log_on_failure += USERID
        log_on_success =
        bind = {{ inventory_hostname }}
        only_from = {{ control_nw }}/{{ control_cidr }}
        per_source = UNLIMITED
}

