[defaults]
log_path={{ log_path }}/bootstrap_install.log
retry_files_enabled = False
gathering = smart
gather_subset = !network
host_key_checking = False
inventory = inventory
display_skipped_hosts = False
remote_user=root

forks = 10

# Set color options
nocolor = 0

# SSH timeout
timeout = 120

# ssh_retry connection plugin
connection_plugins = plugins/connection_plugins
#transport = ssh_retry


[ssh_connection]
retries = 3
pipelining = True


